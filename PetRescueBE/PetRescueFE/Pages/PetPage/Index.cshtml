@page
@model PetRescueFE.Pages.PetPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Pet List</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

@if (Model.Pets != null && Model.Pets.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().Species)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().ArrivalDate)
                </th>
                <th>
                    Image
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().ShelterId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Pets)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Species)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ArrivalDate)
                    </td>
                    <td>
                        <img src="data:image/png;base64,@item.ImageData" alt="Pet Image" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShelterId)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.PetId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.PetId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.PetId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No pets available.</p>
}

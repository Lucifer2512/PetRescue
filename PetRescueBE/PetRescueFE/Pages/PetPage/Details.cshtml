@page
@model PetRescueFE.Pages.PetPage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="profile-container">
    <div class="profile-header">
        <img class="profile-image" src="data:image/png;base64,@Model.Pet.ImageData" alt="Pet Image" />
        <h1 class="profile-name">@Html.DisplayFor(model => model.Pet.Name)</h1>
        <div class="profile-species-status">
            <span class="profile-species">@Html.DisplayFor(model => model.Pet.Species)</span>
        </div>
    </div>

    <div class="profile-details">
        <h4>Details</h4>
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Pet.Age)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Pet.Age)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Pet.Gender)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Pet.Gender)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Pet.Description)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Pet.Description)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Pet.ArrivalDate)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Pet.ArrivalDate)</dd>

            @if (Model.IsAdmin)
            {
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Pet.Status)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Pet.Status)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Pet.ShelterId)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Pet.ShelterId)</dd>
            }
        </dl>
    </div>

    <div class="profile-actions">
        @if (Model.IsAdmin)
        {
            <a class="btn btn-info" asp-page="./Edit" asp-route-id="@Model.Pet?.PetId">Edit</a>
        }
        <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
    </div>
</div>

<style>
    .profile-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .profile-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .profile-image {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        border: 4px solid #4caf50;
        margin-bottom: 20px;
    }

    .profile-name {
        font-size: 2rem;
        color: #333;
        margin: 0;
    }

    .profile-species-status {
        font-size: 1.1rem;
        color: #666;
    }

    .profile-species,
    .profile-status {
        display: inline-block;
        margin: 0 10px;
    }

    .profile-details h4 {
        font-size: 1.4rem;
        color: #333;
        margin-bottom: 15px;
    }

    .profile-details dl {
        display: grid;
        grid-template-columns: 1fr 2fr; 
        gap: 10px; /* Add some spacing between rows */
        align-items: start; /* Align items to the top of each row */
    }

    .profile-details dt {
        font-weight: bold;
        color: #444;
        /* Remove the fixed width */
    }

    .profile-details dd {
        color: #555;
        margin-left: 0; /* Remove the left margin */
    }

    .profile-actions {
        text-align: center;
        margin-top: 30px;
    }

        .profile-actions .btn {
            padding: 10px 20px;
            font-size: 1rem;
            margin: 0 10px;
        }

        .profile-actions .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

        .profile-actions .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .profile-actions .btn:hover {
            opacity: 0.8;
        }

</style>
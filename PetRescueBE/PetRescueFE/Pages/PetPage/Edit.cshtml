@page
@model PetRescueFE.Pages.PetPage.EditModel

@{
    ViewData["Title"] = "Edit Pet";
}


<div class="profile-container">
    <div class="profile-header">
        <img src="data:image/png;base64,@Model.ExistingImageData" alt="Pet Image" />
        <h2>@Model.Pet.Name</h2>
    </div>

    <div class="form-section">
        <h5>Edit Pet Profile</h5>
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pet.PetId" />

            <div class="form-group">
                <label asp-for="Pet.Name" class="control-label"></label>
                <input asp-for="Pet.Name" class="form-control" />
                <span asp-validation-for="Pet.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.Age" class="control-label"></label>
                <input asp-for="Pet.Age" class="form-control" type="number" />
                <span asp-validation-for="Pet.Age" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Pet.ShelterId" class="form-label"></label>
                <select asp-for="Pet.ShelterId" class="form-control">
                    @foreach (var shelter in Model.ShelterOptions)
                    {
                        <option value="@shelter.Value">@shelter.Text</option>
                    }
                </select>
                <span asp-validation-for="Pet.ShelterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.Gender" class="control-label"></label>
                <select asp-for="Pet.Gender" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Pet.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.Description" class="control-label"></label>
                <textarea asp-for="Pet.Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Pet.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.Species" class="control-label"></label>
                <select asp-for="Pet.Species" class="form-control">
                    <option value="Cat">Cat</option>
                    <option value="Dog">Dog</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Pet.Species" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label">Pet Image</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="text-center mt-4">
                <a class="btn btn-secondary" asp-page="/PetPage/Index">Back to List</a>
            </div>
        </form>
    </div>

</div>

<style>
    .profile-container {
        max-width: 900px;
        margin: auto;
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        font-family: Arial, Helvetica, sans-serif;
    }

    .profile-header {
        background-color: #e6f7e6;
        border-radius: 10px 10px 0 0;
        padding: 20px;
        text-align: center;
        color: #2c8a2c;
    }

        .profile-header img {
            width: auto;
            max-width: 100%;
            height: auto;
            max-height: 300px;
            border-radius: 10px;
            margin-bottom: 10px;
        }

    .form-section {
        padding: 20px;
    }

        .form-section h5 {
            border-bottom: 1px solid #ddd;
            padding-bottom: 5px;
            margin-bottom: 15px;
            color: #3572EF;
        }

    .form-group {
        margin-bottom: 1.5em;
    }

    .form-control {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 0.5em;
    }

    .control-label {
        font-weight: bold;
        color: #555;
    }

    .btn-primary, .btn-save {
        background-color: #2c8a2c;
        color: white;
        border-radius: 20px;
        padding: 10px 20px;
        border: none;
        cursor: pointer;
        margin-right: 10px;
    }

        .btn-primary:hover, .btn-save:hover {
            background-color: #247524;
        }

    .btn-secondary {
        color: #333;
        border-radius: 20px;
        padding: 10px 20px;
    }

    .status-badge-active {
        background-color: #2c8a2c;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
    }

    .status-badge-inactive {
        background-color: #d9534f;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
    }

    .image-preview {
        display: flex;
        justify-content: center;
        margin-top: 1em;
    }

        .image-preview img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            border: 2px solid #ddd;
        }
</style>
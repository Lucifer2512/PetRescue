@page
@model PetRescueFE.Pages.PetPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create</h1>

<h4 class="text-center">Pet</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Shelter Select -->
            <div class="form-group mb-4">
                <label asp-for="Pet.ShelterId" class="form-label">Shelter</label>
                <select asp-for="Pet.ShelterId" class="form-control" asp-items="Model.ShelterOptions">
                    <option value="">Select Shelter</option>
                </select>
                <span asp-validation-for="Pet.ShelterId" class="text-danger"></span>
            </div>

            <!-- Pet Name Input -->
            <div class="form-group mb-4">
                <label asp-for="Pet.Name" class="form-label">Pet Name</label>
                <input asp-for="Pet.Name" class="form-control" />
                <span asp-validation-for="Pet.Name" class="text-danger"></span>
            </div>

            <!-- Pet Age Input -->
            <div class="form-group mb-4">
                <label asp-for="Pet.Age" class="form-label">Age</label>
                <input asp-for="Pet.Age" class="form-control" />
                <span asp-validation-for="Pet.Age" class="text-danger"></span>
            </div>

            <!-- Pet Gender Input -->
            <div class="form-group mb-4">
                <label asp-for="Pet.Gender" class="form-label">Gender</label>
                <input asp-for="Pet.Gender" class="form-control" />
                <span asp-validation-for="Pet.Gender" class="text-danger"></span>
            </div>

            <!-- Pet Description Input -->
            <div class="form-group mb-4">
                <label asp-for="Pet.Description" class="form-label">Description</label>
                <input asp-for="Pet.Description" class="form-control" />
                <span asp-validation-for="Pet.Description" class="text-danger"></span>
            </div>

            <!-- Pet Species Input -->
            <div class="form-group mb-4">
                <label asp-for="Pet.Species" class="form-label">Species</label>
                <input asp-for="Pet.Species" class="form-control" />
                <span asp-validation-for="Pet.Species" class="text-danger"></span>
            </div>

            <!-- Profile Image Input -->
            <div class="form-group mb-4">
                <label asp-for="ImageFile" class="form-label">Profile Image</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<!-- Back to List Link -->
<div class="text-center mt-4">
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f7f7f7;
        color: #333;
    }

    h1, h4 {
        font-family: 'Segoe UI', sans-serif;
    }

    hr {
        margin-top: 20px;
        border-color: #ddd;
    }

    /* Form container */
    .row {
        margin-top: 50px;
    }

    .col-md-8 {
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Form group styling */
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-size: 1.1rem;
        font-weight: bold;
        color: #333;
    }

    /* Input fields and select */
    .form-control {
        height: 2.5rem;
        padding: 0.5rem;
        font-size: 1.1rem;
        border-radius: 0.375rem;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }

        /* Focus effect for inputs and selects */
        .form-control:focus {
            border-color: #0069d9;
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
        }

    /* Validation error styling */
    .text-danger {
        font-size: 0.9rem;
    }

    /* Submit button */
    .btn {
        font-size: 1.2rem;
        padding: 12px 24px;
        border-radius: 0.375rem;
        transition: background-color 0.3s ease;
    }

    .btn-primary {
        background-color: #0069d9;
        border-color: #0062cc;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #5a6268;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #4e555b;
        }

    /* Back to List button */
    .text-center {
        text-align: center;
    }

</style>
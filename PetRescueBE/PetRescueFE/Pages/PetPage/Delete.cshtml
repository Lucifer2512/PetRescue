@page
@model PetRescueFE.Pages.PetPage.DeleteModel

@{
    ViewData["Title"] = "Delete Pet";
}

<div class="profile-container">
    <div class="form-section">
        <h5>Are you sure you want to delete this pet?</h5>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <dl class="row">
        <dt class="col-sm-3">Pet Name</dt>
        <dd class="col-sm-9">@Model.Pet.Name</dd>

        <dt class="col-sm-3">Age</dt>
        <dd class="col-sm-9">@Model.Pet.Age</dd>

        <dt class="col-sm-3">Gender</dt>
        <dd class="col-sm-9">@Model.Pet.Gender</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Pet.Description</dd>

        <dt class="col-sm-3">Species</dt>
        <dd class="col-sm-9">@Model.Pet.Species</dd>

        <dt class="col-sm-3">ArrivalDate</dt>
        <dd class="col-sm-9">@Model.Pet.ArrivalDate</dd>
    </dl>

    <div class="text-center mt-4">
        <form method="post" style="display:inline;">
            <input type="hidden" asp-for="@Model.Pet.PetId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<style>
    .profile-container {
        max-width: 900px;
        margin: auto;
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        font-family: Arial, Helvetica, sans-serif;
    }

    .form-section {
        padding: 20px;
        text-align: center;
    }

        .form-section h5 {
            border-bottom: 1px solid #ddd;
            padding-bottom: 5px;
            margin-bottom: 15px;
            color: #d9534f;
        }

    .row dt {
        font-weight: bold;
        color: #555;
    }

    .btn-danger {
        background-color: #d9534f;
        color: white;
        border-radius: 20px;
        padding: 10px 20px;
        border: none;
        cursor: pointer;
        margin-right: 10px;
    }

        .btn-danger:hover {
            background-color: #c9302c;
        }

    .btn-secondary {
        color: #333;
        border-radius: 20px;
        padding: 10px 20px;
    }
</style>
@page
@model PetRescueFE.Pages.Events.DeleteModel

@{
    ViewData["Title"] = "Delete Event";
}

<div class="profile-container">
    <div class="form-section">
        <h5>Are you sure you want to delete this event?</h5>
    </div>
    <dl class="row">
        @* Display Image *@
        <dt class="col-sm-3">Image</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.Event.ImageData))
            {
                <img src="data:image/jpeg;base64,@Model.Event.ImageData" alt="Event Image" style="max-width:200px; max-height:200px;" />
            }
            else
            {
                <span>No Image</span>
            }
        </dd>

        <dt class="col-sm-3">Event Name</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.Name)</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.Description)</dd>

        <dt class="col-sm-3">Start Date & Time</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.StartDateTime)</dd>

        <dt class="col-sm-3">End Date & Time</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.EndDateTime)</dd>

        <dt class="col-sm-3">Location</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.Location)</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.Status)</dd>

        <dt class="col-sm-3">Event Type</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.EventType)</dd>

        <dt class="col-sm-3">Goal</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.Goal)</dd>

        <dt class="col-sm-3">Shelter</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.Shelter.ShelterName)</dd>  @* Display Shelter Name *@

    </dl>

    <div class="text-center mt-4">
        <form method="post" style="display:inline;">
            <input type="hidden" asp-for="Event.EventId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<style>
    /* Style shared with Shelter delete page */
    .profile-container {
        max-width: 900px;
        margin: auto;
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        font-family: Arial, Helvetica, sans-serif;
    }

    .form-section {
        padding: 20px;
        text-align: center;
    }

        .form-section h5 {
            border-bottom: 1px solid #ddd;
            padding-bottom: 5px;
            margin-bottom: 15px;
            color: #d9534f; /* Red color for delete confirmation */
        }

    .row dt {
        font-weight: bold;
        color: #555;
    }

    .btn-danger {
        background-color: #d9534f;
        color: white;
        border-radius: 20px;
        padding: 10px 20px;
        border: none;
        cursor: pointer;
        margin-right: 10px;
    }

        .btn-danger:hover {
            background-color: #c9302c;
        }

    .btn-secondary {
        color: #333;
        border-radius: 20px;
        padding: 10px 20px;
    }


</style>
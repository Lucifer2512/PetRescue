@page
@model PetRescueFE.Pages.Events.CreateModel

@{
    ViewData["Title"] = "Create Event";
}

<div class="profile-container">
    <div class="form-section">
        <h5>Create New Event</h5>
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Event.ShelterId" class="control-label"></label>
                <select asp-for="Event.ShelterId" class="form-control">
                    <option value="">-- Select Shelter --</option>
                    @if (Model.Shelters != null && Model.Shelters.Any())
                    {
                        @foreach (var shelter in Model.Shelters)
                        {
                            <option value="@shelter.ShelterId">@shelter.ShelterName</option>
                        }
                    }
                </select>
                <span asp-validation-for="Event.ShelterId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Event.Name" class="control-label"></label>
                <input asp-for="Event.Name" class="form-control" />
                <span asp-validation-for="Event.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Description" class="control-label"></label>
                <textarea asp-for="Event.Description" class="form-control" rows="4"></textarea> <span asp-validation-for="Event.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.StartDateTime" class="control-label"></label>
                <input asp-for="Event.StartDateTime" class="form-control date-picker" type="text" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Event.StartDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EndDateTime" class="control-label"></label>
                <input asp-for="Event.EndDateTime" class="form-control date-picker" type="text" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Event.EndDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Location" class="control-label"></label>
                <input asp-for="Event.Location" class="form-control" />
                <span asp-validation-for="Event.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EventType" class="control-label"></label>
                <input asp-for="Event.EventType" class="form-control" />
                <span asp-validation-for="Event.EventType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Goal" class="control-label"></label>
                <input asp-for="Event.Goal" class="form-control" type="number" />
                <span asp-validation-for="Event.Goal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label">Event Image</label> <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>

<link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        flatpickr(".date-picker", {
            dateFormat: "Y-m-d",
        });
    });
</script>

<style>
    .profile-container {
        max-width: 900px;
        margin: auto;
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        font-family: Arial, Helvetica, sans-serif;
    }

    .form-section {
        padding: 20px;
    }

    .form-section h5 {
        border-bottom: 1px solid #ddd;
        padding-bottom: 5px;
        margin-bottom: 15px;
        color: #3572EF;
    }

    .form-group {
        margin-bottom: 1.5em;
    }

    .form-control {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 0.5em;
    }

    .control-label {
        font-weight: bold;
        color: #555;
    }

    .btn-primary {
        background-color: #2c8a2c;
        color: white;
        border-radius: 20px;
        padding: 10px 20px;
        border: none;
        cursor: pointer;
        margin-right: 10px;
    }

    .btn-primary:hover {
        background-color: #247524;
    }

    .btn-secondary {
        color: #333;
        border-radius: 20px;
        padding: 10px 20px;
    }

    .flatpickr-calendar {
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .flatpickr-month {
        background-color: #3572EF;
        color: white;
        border-radius: 10px 10px 0 0;
    }

    .flatpickr-day {
        border-radius: 50%;
        transition: background-color 0.2s;
    }

    .flatpickr-day:hover {
        background-color: #f0f0f0;
    }

    .flatpickr-day.selected {
        background-color: #2c8a2c;
        color: white;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@page
@model PetRescueFE.Pages.Events.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>
@if (Model.CanEdit)
{
    <p>
        <a asp-page="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].StartDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].EndDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].EventType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Goal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Shelter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Event) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Goal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shelter.ShelterAddress)
            </td>
            <td>
                @if (Model.CanEdit)
                {
                    <a asp-page="./Edit" asp-route-id="@item.EventId">Edit</a> <text>|</text>
                }
                <a asp-page="./Details" asp-route-id="@item.EventId">Details</a>
                @if (Model.CanEdit)
                {
                    <text>|</text> <a asp-page="./Delete" asp-route-id="@item.EventId">Delete</a>
                }
                @if (Model.CanDonate)
                {
                    <text>|</text> <a asp-page="/DonationPage/Create" asp-route-eventId="@item.EventId" asp-route-shelterId="@item.Shelter.ShelterId">Donate</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>

@page
@model PetRescueFE.Pages.UserPage.IndexModel

@{
    ViewData["Title"] = "Users List";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="users-container">
    <div class="page-header">
        <h1>@ViewData["Title"]</h1>
        <a asp-page="Create" class="btn-create">
            <i class="bi bi-plus-circle"></i> Create New User
        </a>
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Contact</th>
                    <th scope="col">Status</th>
                    <th scope="col">Role</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Users)
                {
                    <tr>
                        <td>@(Model.Users.IndexOf(item) + 1)</td>
                        <td>
                            <div class="user-info">
                                <div class="user-name">@item.FirstName @item.LastName</div>
                                <div class="user-email">@item.Email</div>
                            </div>
                        </td>
                        <td>
                            <div class="contact-info">
                                <div>📱 @item.PhoneNumber</div>
                                <div>📍 @item.Address</div>
                            </div>
                        </td>
                        <td>
                            @if (item.Status == "ACTIVE")
                            {
                                <span class="status-badge active">Active</span>
                            }
                            else
                            {
                                <span class="status-badge inactive">Inactive</span>
                            }
                        </td>
                        <td>
                            <span class="role-badge">@item.RoleName</span>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a asp-page="./Edit" asp-route-id="@item.UserId" class="btn-action edit" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-page="./Details" asp-route-id="@item.UserId" class="btn-action details" title="Details">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                                <a asp-page="./Delete" asp-route-id="@item.UserId" class="btn-action delete" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="container mt-4">
        @* Pagination container *@
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.CurrentPage - 1)">
                            <i class="bi bi-chevron-left"></i> Previous
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link"><i class="bi bi-chevron-left"></i> Previous</span>
                    </li>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-page="./Index" asp-route-pageIndex="@i">@i</a>
                    </li>
                }

                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.CurrentPage + 1)">
                            Next <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">Next <i class="bi bi-chevron-right"></i></span>
                    </li>
                }
            </ul>
        </nav>
    </div>

</div>

<style>
    .users-container {
        background-color: #f8f9fa;
        border-radius: 15px;
        padding: 20px;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #f0f0f0;
    }

    .page-header h1 {
        color: #2c3e50;
        font-size: 1.8rem;
        margin: 0;
    }

    .btn-create {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background-color: #3572EF;
        color: white;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-create:hover {
        background-color: #2861d8;
        color: white;
        transform: translateY(-2px);
    }

    .table-responsive {
        margin: 1rem 0;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
    }

    .table {
        margin: 0;
        width: 100%;
        background-color: white;
    }

    .table th {
        background-color: #f8f9fa;
        color: #2c3e50;
        font-weight: 600;
        padding: 1rem;
        border-bottom: 2px solid #e9ecef;
    }

    .table td {
        padding: 1rem;
        vertical-align: middle;
        border-bottom: 1px solid #e9ecef;
    }

    .user-info {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .user-name {
        font-weight: 600;
        color: #2c3e50;
    }

    .user-email {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 4px;
        color: #6c757d;
        font-size: 0.9rem;
    }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .status-badge.active {
        background-color: #e8f5e9;
        color: #2e7d32;
    }

    .status-badge.inactive {
        background-color: #ffebee;
        color: #c62828;
    }

    .role-badge {
        background-color: #e3f2fd;
        color: #1976d2;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .action-buttons {
        display: flex;
        gap: 8px;
        justify-content: center;
    }

    .btn-action {
        width: 35px;
        height: 35px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-action.edit {
        background-color: #e3f2fd;
        color: #1976d2;
    }

    .btn-action.details {
        background-color: #fff3e0;
        color: #f57c00;
    }

    .btn-action.delete {
        background-color: #ffebee;
        color: #c62828;
    }

    .btn-action:hover {
        transform: translateY(-2px);
        opacity: 0.9;
    }
</style>
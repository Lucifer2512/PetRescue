@page
@model PetRescueFE.Pages.AdoptionApplicationPage.EditModel
@{
    ViewData["Title"] = "Edit Application";

    List<SelectListItem> statusOptions = new List<SelectListItem>()
    {
        new SelectListItem { Value = "APPROVED", Text = "Approved" },
        new SelectListItem { Value = "DISAPPROVED", Text = "Disapproved" },
    };

}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>AdoptionApplication</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AdoptionApplication.ApplicationId" />
                <div class="form-group">
                    <label asp-for="AdoptionApplication.Status" class="control-label"></label>
                    <select asp-for="AdoptionApplication.Status" asp-items="statusOptions" class="form-control"></select>
                    <span asp-validation-for="AdoptionApplication.Status" class="text-danger"></span>
                </div>
            <div class="form-group">
                <label asp-for="AdoptionApplication.Notes" class="control-label"></label>
                <input asp-for="AdoptionApplication.Notes" class="form-control" />
                <span asp-validation-for="AdoptionApplication.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>

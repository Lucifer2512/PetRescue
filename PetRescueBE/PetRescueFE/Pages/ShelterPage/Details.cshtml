@page
@model PetRescueFE.Pages.ShelterPage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Shelter</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shelter.ShelterName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shelter.ShelterName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shelter.ShelterAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shelter.ShelterAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shelter.ShelterPhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shelter.ShelterPhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shelter.Balance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shelter.Balance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shelter.UserEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shelter.UserEmail)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="data:image/png;base64,@Model.Shelter.ImageData" alt="Shelter Image" />
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Shelter?.ShelterId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

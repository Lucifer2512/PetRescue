@page
@model PetRescueFE.Pages.ShelterPage.DetailsModel

@{
    ViewData["Title"] = "Shelter Details";
}

<div class="profile-container">
    <div class="profile-header">
        <img src="data:image/png;base64,@Model.Shelter.ImageData" alt="Shelter Image" />
        <h2>@Model.Shelter.ShelterName</h2>
    </div>

    <div class="form-section">
        <h5>Shelter Profile</h5>
        <dl class="row">
            <dt class="col-sm-3">Shelter Name</dt>
            <dd class="col-sm-3">@Model.Shelter.ShelterName</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-3">@Model.Shelter.ShelterAddress</dd>

            <dt class="col-sm-3">Phone Number</dt>
            <dd class="col-sm-3">@Model.Shelter.ShelterPhoneNumber</dd>

            <dt class="col-sm-3">Balance</dt>
            <dd class="col-sm-3">@Model.Shelter.Balance.ToString("#,0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) VND</dd>

            <dt class="col-sm-3">User Email</dt>
            <dd class="col-sm-3">@Model.Shelter.UserEmail</dd>

        </dl>
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Shelter?.ShelterId">Edit</a>
        <a class="btn btn-secondary" asp-page="/ShelterPage/Index">Back to List</a>
    </div>
</div>

<style>
    .profile-container {
        max-width: 900px;
        margin: auto;
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        font-family: Arial, Helvetica, sans-serif;
    }

    .profile-header {
        background-color: #e6f7e6;
        border-radius: 10px 10px 0 0;
        padding: 20px;
        text-align: center;
        color: #2c8a2c;
    }

        .profile-header img {
            width: 100%; 
            height: auto; 
            border-radius: 10px; 
            margin-bottom: 10px;
            padding: 10px; 
        }

    .form-section {
        padding: 20px;
    }

        .form-section h5 {
            border-bottom: 1px solid #ddd;
            padding-bottom: 5px;
            margin-bottom: 15px;
            color: #3572EF;
        }

        .form-section dt, .form-section dd {
            margin: 0;
            padding: 10px 0;
        }

        .form-section dd {
            color: #333;
        }
</style>
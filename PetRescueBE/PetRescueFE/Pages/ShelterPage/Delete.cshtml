@page
@model PetRescueFE.Pages.ShelterPage.DeleteModel

@{
    ViewData["Title"] = "Delete Shelter";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - PetRescueFE</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .profile-container {
            max-width: 900px;
            margin: auto;
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            font-family: Arial, Helvetica, sans-serif;
        }

        .form-section {
            padding: 20px;
            text-align: center;
        }

            .form-section h5 {
                border-bottom: 1px solid #ddd;
                padding-bottom: 5px;
                margin-bottom: 15px;
                color: #d9534f;
            }

        .row dt {
            font-weight: bold;
            color: #555;
        }

        .btn-danger {
            background-color: #d9534f;
            color: white;
            border-radius: 20px;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            margin-right: 10px;
        }

            .btn-danger:hover {
                background-color: #c9302c;
            }

        .btn-secondary {
            color: #333;
            border-radius: 20px;
            padding: 10px 20px;
        }
    </style>
</head>
<body>
    <div class="profile-container">
        <div class="form-section">
            <h5>Are you sure you want to delete this shelter?</h5>
        </div>
        <dl class="row">
            <dt class="col-sm-3">Shelter Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Shelter.ShelterName)</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Shelter.ShelterAddress)</dd>

            <dt class="col-sm-3">Phone Number</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Shelter.ShelterPhoneNumber)</dd>

            <dt class="col-sm-3">User Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Shelter.UserEmail)</dd>

            <dt class="col-sm-3">Balance</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Shelter.Balance)</dd>
        </dl>

        <div class="text-center mt-4">
            <form method="post" style="display:inline;">
                <input type="hidden" asp-for="Shelter.ShelterId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
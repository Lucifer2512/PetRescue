@page
@model PetRescueFE.Pages.ShelterPage.IndexModel

@{
    ViewData["Title"] = "Shelter List";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="page-container">
    <div class="page-header">
        <h1>@ViewData["Title"]</h1>
        @if (Model.CanCreate)
        {
            <a asp-page="Create" class="btn-create">
                <i class="bi bi-plus-circle"></i>Create
            </a>
        }
    </div>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>@Html.DisplayNameFor(model => model.Shelter[0].ShelterName)</th>
                    <th>@Html.DisplayNameFor(model => model.Shelter[0].ShelterAddress)</th>
                    <th>@Html.DisplayNameFor(model => model.Shelter[0].ShelterPhoneNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.Shelter[0].Balance)</th>
                    <th>@Html.DisplayNameFor(model => model.Shelter[0].UserEmail)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var index = 1;
                }
                @foreach (var item in Model.Shelter)
                {
                    <tr>
                        <td>@index</td>
                        <td>@Html.DisplayFor(modelItem => item.ShelterName)</td>
                        <td>@Html.DisplayFor(modelItem => item.ShelterAddress)</td>
                        <td>@Html.DisplayFor(modelItem => item.ShelterPhoneNumber)</td>
                        <td>@item.Balance.ToString("#,0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) VND</td>
                        <td>@Html.DisplayFor(modelItem => item.UserEmail)</td>
                        <td class="action-links">
                            <a asp-page="./Edit" asp-route-id="@item.ShelterId" class="btn-action btn-edit">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                            <a asp-page="./Details" asp-route-id="@item.ShelterId" class="btn-action btn-details">
                                <i class="fa-solid fa-circle-info"></i> Detail
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.ShelterId" class="btn-action btn-delete">
                                <i class="fa fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                    index++;
                }
            </tbody>
        </table>
    </div>

    <div class="container mt-4">
        @* Pagination container *@
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.CurrentPage - 1)">
                            <i class="bi bi-chevron-left"></i> Previous
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link"><i class="bi bi-chevron-left"></i> Previous</span>
                    </li>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-page="./Index" asp-route-pageIndex="@i">@i</a>
                    </li>
                }

                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.CurrentPage + 1)">
                            Next <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">Next <i class="bi bi-chevron-right"></i></span>
                    </li>
                }
            </ul>
        </nav>
    </div>

</div>


<style>
    .page-container {
        max-width: 900px;
        margin: auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        font-family: Arial, Helvetica, sans-serif;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        color: #3572EF;
    }

    .btn-create {
        background-color: #2c8a2c;
        color: white;
        border-radius: 20px;
        padding: 10px 20px;
        border: none;
        cursor: pointer;
        text-decoration: none;
    }

        .btn-create:hover {
            background-color: #247524;
        }

    .table-container {
        display: flex;
        justify-content: center;
    }

    .table {
        background-color: #ffffff;
        border-radius: 10px;
        overflow: hidden;
        border-collapse: collapse;
        margin: 0 auto;
    }

        .table th {
            background-color: #3572EF;
            color: white;
            text-align: center;
            padding: 10px;
            border: 1px solid #ddd;
        }

        .table td {
            padding: 10px;
            text-align: center;
            border: 1px solid #ddd;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

    .btn-action {
        display: inline-flex;
        align-items: center;
        color: white;
        border-radius: 5px;
        padding: 5px 10px;
        font-size: 0.9em;
        margin: 0 2px;
    }

    .btn-edit {
        color: #007bff;
        text-decoration: none;
    }

    .btn-details {
        color: #ffc107;
        text-decoration: none;
    }

    .btn-delete {
        color: #dc3545;
        text-decoration: none;
    }

        .btn-details .fa, .btn-delete .fa {
            margin-right: 5px;
        }

    .status-active {
        background-color: #28a745;
        color: white;
        border-radius: 5px;
        padding: 5px 10px;
        font-weight: bold;
    }

    .status-inactive {
        background-color: #dc3545;
        color: white;
        border-radius: 5px;
        padding: 5px 10px;
        font-weight: bold;
    }

    .action-links {
        display: flex;
        justify-content: center;
        gap: 5px;
    }

    .pagination {
        margin-bottom: 2rem;
    }

    .page-link {
        color: #2c3e50;
        border-color: #dee2e6;
    }

    .page-item.active .page-link {
        background-color: #2c3e50;
        border-color: #2c3e50;
    }

    .page-link:hover {
        color: #1a252f;
        background-color: #e9ecef;
        border-color: #dee2e6;
    }

    .page-item.disabled .page-link {
        color: #6c757d;
    }
</style>
@page
@model PetRescueFE.Pages.ShelterPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Shelter[0].ShelterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shelter[0].ShelterAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shelter[0].ShelterPhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shelter[0].Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shelter[0].UserEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Shelter) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShelterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShelterAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShelterPhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserEmail)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ShelterId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ShelterId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ShelterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

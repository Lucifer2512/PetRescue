@page
@model PetRescueFE.Pages.LoginModel
@{
    ViewData["Title"] = "Login Page";
}
<div class="main-content">
    <div class="background"></div>
    <div class="login-container">
        <a href="/Index" class="close-icon">&times;</a>
        <h2>Login</h2>
        <form method="post">

            <input asp-for="AccountViewModel.Email" type="email" id="email" name="email" required placeholder="Email">

            <input asp-for="AccountViewModel.Password" type="password" id="password" name="password" required placeholder="Password">
            @if (TempData["ErrorMessage"] != null)
            {
                <p class="text-danger">@TempData["ErrorMessage"]</p>
            }
            <button type="submit">Login</button>
        </form>
        <p>Don't have an account? <a asp-page="/SignUp">Sign Up</a></p>
        <div class="right-section">
            <div class="social-login">
                <p>Or sign in with:</p>
                <button class="google-btn" onclick="location.href='@Url.Page("/ExternalLogin", new { provider = "Google" })'">
                    <i class="fab fa-google"></i> Sign in with Google
                </button>
                <button class="facebook-btn" onclick="location.href='@Url.Page("/ExternalLogin", new { provider = "Facebook" })'">
                    <i class="fab fa-facebook-f"></i> Sign in with Facebook
                </button>
            </div>
        </div>
    </div>
</div>
<style>
    .navbar{
        display: none;
    }

    .text-danger {
        color: red;
        font-size: 20px;
        margin-bottom: 10px;
    }

    .main-content {
        display: flex;
        justify-content: center; /* Center horizontally */
        align-items: center; /* Center vertically */
        height: 100vh; /* Full height of the viewport */
        position: relative;
        overflow: hidden; /* Prevent scrolling */
    }

    .background {
        position: fixed; /* Fixed to cover the whole viewport */
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('https://cdn.tradeforgood.com.au/app/uploads/2022/05/petrescue-cat.jpg?strip=all&lossy=1&ssl=1&fit=1082,788');
        background-size: cover;
        z-index: -1; /* Place background behind other elements */
    }

    /* Close icon styling */
    .close-icon {
        position: absolute;
        top: 10px;
        right: 20px;
        font-size: 30px;
        color: #34363C;
        text-decoration: none;
        z-index: 2;
    }

        .close-icon:hover {
            color: red;
        }


    .login-container {
        width: 25%; /* Reduced width for a smaller container */
        background-color: transparent;
        backdrop-filter: blur(20px);
        padding: 35px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        z-index: 1; /* Ensure it's in front of the background */
        border-radius: 0px 50px 0px 50px;
        border: 2px solid rgba(255,255,255,.2);
    }

        .login-container h2 {
            margin-bottom: 20px;
            padding-top:20px;
            font-size: 50px;
            color: #34363C;
        }

        .login-container form {
            width: 100%;
            display: flex;
            flex-direction: column;
            margin-top: 10px;
        }

        .login-container input {
            padding: 10px;
            margin-bottom: 20px;
            outline: none;
            border:none;
            border-bottom: 1px solid #ccc;
            margin-top: 10px;
            font-size:20px;
            background: none;
        }

            .login-container input::placeholder{
                color: #34363C;
                font-size: 20px;
                font: 16px/1.4em madefor-text,helveticaneuew01-45ligh,helveticaneuew02-45ligh,helveticaneuew10-45ligh,sans-serif;
            }

            .login-container input:hover{
                border-bottom: 2px solid #34363C;
            }

        .login-container button {
            margin-top: 10px;
            padding: 15px 20px;
            background-color: #34363C;
            font: 16px/1.4em madefor-text,helveticaneuew01-45ligh,helveticaneuew02-45ligh,helveticaneuew10-45ligh,sans-serif;
            color: white;
            font-size: 20px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

            .login-container button:hover {
                background-color: black;
            }

        .login-container p {
            margin-top: 20px;
            font:  cera-round-pro, "Helvetica Neue", "Helvetica", "Arial", sans-serif;
        }

            .login-container p a{
                color: black;
                font-weight:600;
                text-decoration:none
            }

    .right-section {
        display: flex;
        align-items: center;
    }

    .social-login {
        text-align: center;
    }

        .social-login p {
            margin-bottom: 10px;
        }

        .social-login button {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            font-size: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .social-login .google-btn {
            background-color: #dd4b39;
            color: white;
        }

            .social-login .google-btn i {
                margin-right: 10px;
            }

        .social-login .facebook-btn {
            background-color: #3b5998;
            color: white;
        }

            .social-login .facebook-btn i {
                margin-right: 10px;
            }
</style>

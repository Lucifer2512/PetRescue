<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PetRescueFE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PetRescueFE.styles.css" asp-append-version="true" />
    <style>
        .popup-container {
            position: fixed;
            top: 20px;
            right: 20px;
            width: 300px;
            z-index: 1000;
        }

        .notification {
            background-color: #f8f9fa;
            border: 1px solid #ddd;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            font-size: 16px;
            text-align: center;
        }

        .notification-label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .notification-link {
            display: block;
            color: #007bff;
            text-decoration: none;
        }

            .notification-link:hover {
                text-decoration: underline;
            }

        .close-button {
            position: absolute;
            top: 5px;
            right: 5px;
            background: none;
            border: none;
            font-size: 20px;
            cursor: pointer;
        }

        .navbar {
            height: auto; /* Đảm bảo chiều cao navbar không bị bóp */
            padding: 15px; /* Giữ padding như mong muốn */
            min-height: 80px; /* Đặt chiều cao tối thiểu nếu cần */
        }

            .navbar h1 {
                font-size: 1.5em; /* Tùy chỉnh kích thước chữ cho phần h1 */
            }

            .navbar .container1 {
                max-width: 100%; /* Đảm bảo container không bị bóp */
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

        

        
    </style>
</head>
<body>
    <header class="navbar">
        <div class="container1">
            <h1>PetRescue</h1>
            <nav>
                <ul>
                    <li><a asp-page="/Index">PetRescueFE</a></li>

                </ul>
            </nav>
            <div class="right-section">
                @if (!string.IsNullOrEmpty(Context.Session.GetString("Role")))
                {
                    <div class="dropdown" id="userDropdown">
                        <i class="fa fa-user" onclick="toggleDropdown()"></i>
                        <div class="dropdown-content">
                            <a asp-page="/shelterpage/Index" asp-route-accId="@Context.Session.GetString("AccountId")"><i class="fa-solid fa-user-tie"></i>Shelter</a>
                            <a asp-page="/Admin">Admin</a>
                            <a asp-page="/userpage/Index" asp-route-accId="@Context.Session.GetString("AccountId")"><i class="fa-solid fa-user"></i> User</a>
                            <a asp-page="/Payment"><i class="fa-solid fa-credit-card"></i>Payment</a>
                            <a asp-page="/donationpage/Create"><i class="fa-solid fa-money-check-dollar"></i>Donation</a>
                            <a asp-page="/Logout"><i class="fa-solid fa-right-from-bracket"></i>Log out</a>
                        </div>
                    </div>
                }
                else
                {
                    
                    <button class="login-btn" onclick="location.href='@Url.Page("/Login")'">Login/Sign Up</button>
                   
                }
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - PetRescueFE - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("Notyf")
    
</body>
</html>
